<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masthuggis.boki">

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Boki"
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/boki_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/boki_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MessagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.DetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.HomeFragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.CreateAdActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.masthuggis.boki.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>